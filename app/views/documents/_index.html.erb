<% documents[0..3].each do |document| %>
    <li>
        <a href="#documents/<%= document.id %>/edit" onclick="T8Writer.Core.openDocument(<%= document.id %>);return false;" tabindex="2"><%= document.title %></a>
    </li>
<% end %>
<% if documents.size > 4 %>
	<li>
		<a tabindex="2">more&hellip;</a>
		<ul id="T8Writer_AddlDocs">
			<% documents[4..documents.size].each do |document| %>
				<li>
					<a href="#documents/<%= document.id %>/edit" onclick="T8Writer.Core.openDocument(<%= document.id %>);return false;" tabindex="2"><%= document.title %></a>
				</li>
			<% end %>
		</ul>
	</li>
<% end %>